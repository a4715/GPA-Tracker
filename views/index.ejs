   <!-- GPA Summary Section -->
   <div class="container-fluid mt-4 px-0">
    <div class="card shadow-sm mb-4 rounded-0" style="background-color: #f8f9fa; border-left: 5px solid #3F51B5;">
      <div class="card-body">
        <div class="row align-items-center">
          <!-- Current GPA -->
          <div class="col-md-6 text-center">
            <div class="d-flex flex-column align-items-center">
              <h4 class="text-muted mb-3">Current GPA</h4>
              <h2 class="display-4 mb-3">0.00</h2>
              <a href="/addGPA" class="btn btn-primary" style="background-color: #3F51B5; border-color: #3F51B5;">
                Add GPA
              </a>
            </div>
          </div>
          
          <!-- Divider -->
          <div class="col-md-1 text-center">
            <div style="border-left: 1px solid #dee2e6; height: 120px;"></div>
          </div>
          
          <!-- Projected GPA -->
          <div class="col-md-5 text-center">
            <div class="d-flex flex-column align-items-center">
              <h4 class="text-muted mb-3">Projected GPA</h4>
              <h2 class="display-4 mb-3">0.00</h2>
              <small class="text-muted">
                <span class="text-muted">No change</span>
                from current
              </small>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

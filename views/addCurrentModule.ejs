<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Add Module</title>
  <style>
    body { background-color: #EDE7F6; }
  </style>
</head>
<body>
  <nav class="navbar navbar-expand-sm" style="background-color: #3F51B5;">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">GPA Tracker</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav">
          <li class="nav-item"><a class="nav-link" href="/addCurrentModule">Add Current Module</a></li>
          <li class="nav-item"><a class="nav-link" href="/moduleDetails">Module Details</a></li>
        </ul>
      </div>
    </div>
  </nav>
  <br>
  <div class="container mt-4">
    <h2 class="text-center mb-4">Add Module</h2>
    <% if (messages.error) { %><p class="text-danger text-center"><%= messages.error %></p><% } %>
    <% if (messages.success) { %><p class="text-success text-center"><%= messages.success %></p><% } %>
    <% if (Module) { %>
      <form action="/editCurrentModule/<%= Module.ModuleId %>" method="POST" class="mx-auto" style="max-width: 500px;">
        <div class="mb-3">
          <label for="moduleName" class="form-label">Module Name</label>
          <input type="text" class="form-control" id="moduleName" name="moduleName" value="<%= Module.moduleName %>" required>
        </div>
        <div class="mb-3">
          <label for="code" class="form-label">Module Code</label>
          <input type="text" class="form-control" id="code" name="code" value="<%= Module.code %>" required>
        </div>
        <div class="d-grid gap-2">
          <button type="submit" class="btn btn-primary">Save Module</button>
        </div>
      </form>

      <hr>
      <h4 class="text-center mb-3">Components</h4>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Assessment</th>
            <th>Grade</th>
            <th>Weightage</th>
          </tr>
        </thead>
        <tbody>
          <% if (components && components.length > 0) { %>
            <% components.forEach(function(comp) { %>
              <tr>
                <td><%= comp.assessment %></td>
                <td><%= comp.grade %></td>
                <td><%= comp.weightage %> %</td>
                <td>
                  <form action="/deleteComponent/<%= comp.id %>" method="POST" style="display:inline-block;">
                    <button type="submit" class="btn btn-sm btn-danger">Delete</button> //delete button for component
                  </form>
                  <a href="/editComponent/<%= comp.id %>" class="btn btn-sm btn-warning ms-1">Edit</a> //edit button for component
                </td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr><td colspan="4" class="text-center">No components added yet.</td></tr>
          <% } %>
        </tbody>
      </table>

      <h4 class="text-center mb-3">Add New Component</h4>
      <form action="/addComponent" method="POST" class="mx-auto" style="max-width: 500px;">
        <input type="hidden" name="moduleId" value="<%= Module.ModuleId %>">
        <div class="mb-3">
          <label for="assessment" class="form-label">Assessment</label>
          <input type="text" class="form-control" id="assessment" name="assessment" required>
        </div>
        <div class="mb-3">
          <label for="grade" class="form-label">Grade</label>
          <input type="text" class="form-control" id="grade" name="grade" required>
        </div>
        <div class="mb-3">
          <label for="weightage" class="form-label">Weightage (%)</label>
          <input type="number" class="form-control" id="weightage" name="weightage" min="0" step="5" required>
        </div>
        <div class="d-grid gap-2">
          <button type="submit" class="btn btn-success">Add Component</button>
        </div>
      </form>
    <% } else { %>
      <p class="text-center">Module not found.</p>
    <% } %>
  </div>
</body>
</html> 

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>GPA Tracker</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <style>
    body {
      background-color: #EDE7F6;
    }
  </style>
</head>
<body>
  <nav class="navbar navbar-expand-sm" style="background-color: #3F51B5;">
    <div class="container-fluid">
      <a class="navbar-brand text-white" href="/">GPA Tracker</a>
    </div>
  </nav>

  <div class="container my-4">

    <h2>Search Modules</h2>
    <form action="/moduleDetails" method="GET" class="row g-3 mb-4">
      <div class="col-auto">
        <input type="text" name="search" class="form-control" placeholder="Enter module name or code" />
      </div>
      <div class="col-auto">
        <button type="submit" class="btn btn-primary">Search</button>
      </div>
    </form>

    <hr />

    <h2>Module Details</h2>

    <% if (modules.length === 0) { %>
      <p>No modules found.</p>
    <% } %>
    <% for (let i = 0; i < modules.length; i++) { %>
      <div class="card my-4">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center">
            <h5 class="card-title mb-0">
              <%= modules[i].module_name %> (<%= modules[i].module_code %>)
            </h5>
            <div>
              <a href="/editCurrentModule/<%= modules.module_id %>">Edit Module</a>
              <a href="/moduleDetails/<%= modules[i].module_id %>">View Module Details</a>
            </div>
          </div>
          <table class="table table-bordered mt-3">
            <thead class="table-light">
              <tr>
                <th>Assessment</th>
                <th>Grade</th>
                <th>Weightage (%)</th>
              </tr>
            </thead>
            <tbody>
              <% for (let j = 0; j < components.length; j++) { %>
                <% if (components[j].module_id == modules[i].module_id) { %>
                  <tr>
                    <td><%= components[j].component_name %></td>
                    <td><%= components[j].grade %></td>
                    <td><%= components[j].weightage %></td>
                  </tr>
                <% } %>
              <% } %>
            </tbody>
          </table>

        </div>
      </div>
    <% } %>

  </div>
</body>
</html>
